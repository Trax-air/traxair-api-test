            },
            "put": {
                "tags": [
                    "me"
                ],
                "summary": "Update your callbacks",
                "operationId": "changeCallbacks",
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "in": "formData",
                        "name": "callbackTrackIdentification",
