        "/identify/track/{identificationId}/{runNumber}": {
            "get": {
                "tags": [
                    "track",
                    "identification"
                ],
                "summary": "Retrieve a `TrackIdentificationRun` object.",
                "operationId": "getTrackIdentification",
                "parameters": [
                    {
                        "name": "identificationId",
                        "in": "path",
                        "required": true,
